            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.token) {",
                  "        pm.collectionVariables.set('auth_token', jsonData.data.token);",
                  "        console.log('Token saved:', jsonData.data.token);",
                  "    }",
                  "    if (jsonData.data && jsonData.data.user && jsonData.data.user.id) {",
                  "        pm.collectionVariables.set('user_id', jsonData.data.user.id);",
                  "        console.log('User ID saved:', jsonData.data.user.id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"

# ===============================================
# DOCKERFILE - API GATEWAY (Development)
# ===============================================

FROM node:20-alpine

WORKDIR /app

# Copy shared module first
COPY shared /shared
WORKDIR /shared
RUN npm install && npm run build

# Back to service directory
WORKDIR /app

COPY api-gateway/package*.json ./
RUN npm install

COPY api-gateway/ ./

EXPOSE 3000

CMD ["npm", "run", "dev"]

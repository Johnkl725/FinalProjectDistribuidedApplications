# ===============================================
# DOCKERFILE - CLAIMS SERVICE (Development)
# ===============================================

FROM node:20-alpine

WORKDIR /app

# Copy shared module first
COPY shared /shared
WORKDIR /shared
RUN npm install && npm run build

# Back to service directory
WORKDIR /app

COPY claims-service/package*.json ./
RUN npm install

COPY claims-service/ ./

EXPOSE 3005

CMD ["npm", "run", "dev"]


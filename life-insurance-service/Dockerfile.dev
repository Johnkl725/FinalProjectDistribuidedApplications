# ===============================================
# DOCKERFILE - LIFE INSURANCE SERVICE (Development)
# ===============================================

FROM node:20-alpine

WORKDIR /app

# Copy shared module first
COPY shared /shared
WORKDIR /shared
RUN npm install && npm run build

# Back to service directory
WORKDIR /app

COPY life-insurance-service/package*.json ./
RUN npm install

COPY life-insurance-service/ ./

EXPOSE 3002

CMD ["npm", "run", "dev"]
